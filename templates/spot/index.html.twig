{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Les spots{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('partials/navbar.html.twig') %}

    <div class="container shadow mt-2 bg-primary">
        <div class="row overflow-hidden">
            <div class="col-sm-6 py-3">
                <a href="{{ path('spot_new') }}" class="btn btn-primary">Ajouter un spot</a>
            </div>
            <div class="col py-3">
                <form action="">
                    <input type="search" class="form-control" placeholder="Search">
                </form>
            </div>
        </div>
    </div>

    <div class="container mt-3">
        <div class="row">
            <div class="col bg-primary p-0">
                <div id="map" style="min-height: 500px;">map</div>
            </div>
        </div>
        <div class="row mt-4">
            {% for spot in pagination.data %}
                <div class="col-sm-6 col-md-3 mb-3">
                    {{ include('partials/spot-card.html.twig') }}
                </div>
            {% endfor %}
        </div>

        {{ pagination.display() }}

    </div>

    <!-- Footer -->
    {% include('partials/footer.html.twig') %}

    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('app/googleMap') }}
    {% endblock %}
{% endblock %}