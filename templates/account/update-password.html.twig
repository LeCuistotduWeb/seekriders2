{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Modification du mot de passe{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('partials/navbar.html.twig') %}

    <div class="container">
        <div class="col-md-8 mx-auto mt-5">
            <div class="card">
                <div class="card-header"><h1>Modification du mot de passe</h1></div>
                <div class="card-body">

                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_widget(form) }}
                    </div>

                    <button class="btn btn-danger btn-block">Modifier le mot de passe</button>
                    {{ form_end(form) }}

                    <div class="text-center">
                        <a class="d-block small mt-3" href="{{ path('account_login') }}">Se connecter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
