{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ user.username }}{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('partials/navbar.twig.html') %}

    <div class="container mt-5">
        <div class="row mb-5">
            <div class="col-3 text-center">
                <img src="https://picsum.photos/128" class="avatar mb-3 rounded-circle img-fluid" alt="Avatar de {{user.username}}">
            </div>
            <div class="col">
                <h1>{{user.username}}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}

                {% if user.location %}
                <p>{{ user.location.department }} / {{ user.location.city }}</p>
                {% endif %}

                <div class="content mt-3">
                    Descirption : {% if user.biography == null %} aucune {% else  %}{{ user.biography }}{% endif %}
                </div>
                <p class="mt-3">Niveau : Intermedaire</p>
                <p>Inscris depuis {{ user.createdAt | date('d M Y') }}</p>
            </div>
        </div>

        <section>

        </section>

    </div>

    <!-- Footer -->
    {% include('partials/footer.html.twig') %}
{% endblock %}
