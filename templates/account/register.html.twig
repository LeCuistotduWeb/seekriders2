{% extends 'base.html.twig' %}

{% block title %}{{  parent() }} Créer un nouveau compte{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('partials/navbar.twig.html') %}

    <div class="container">
        <div class="col-md-8 mx-auto mt-5">
            <div class="card">
                <div class="card-header">Création d'un nouveau compte</div>
                <div class="card-body">

                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.username, {'label': 'Nom d\'utilisateur :', 'attr':{'placeholder': 'Nom d\'utilisateur...'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email, {'label': 'Adresse email :','attr':{'placeholder': 'Adresse email ...'}}) }}
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                {{ form_row(form.password, {'label': 'Mot de passe :','attr':{'placeholder': 'Mot de passe ...'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.passwordConfirm, {'label': 'Confirmation mot de passe :','attr':{'placeholder': 'Confirmation mot de passe ...'}}) }}
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block">S'inscrire</button>
                    {{ form_end(form) }}

                    <div class="text-center">
                        <a class="d-block small mt-3" href="{{ path('account_login') }}">Se connecter</a>
                        {#<a class="d-block small" href="{{ path('security_forgot-password') }}">Mot de passe oublié ?</a>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
