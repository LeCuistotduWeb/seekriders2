{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Modification du spot {{ spot.title }}{% endblock %}

{% block body %}

    <!-- Navigation -->
    {% include('partials/navbar.html.twig') %}

    <div class="container mt-5">
        <h1>
            Modification du spot {{ spot.title }}
        </h1>

        {{ include('spot/_form.html.twig', {button: 'Enregistrer les modifications'}) }}

        {% if is_granted('ROLE_ADMIN') %}
            {{ include('spot/_delete_form.html.twig') }}
        {%endif%}
    </div>
    {% block javascripts %}
        <!-- algoliaPlaces -->
        {{ encore_entry_script_tags('app/algoliaPlaces') }}
    {% endblock %}
{% endblock %}
