{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Modification de la session {{ session.title }}{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app/app') }}
    {{ encore_entry_link_tags('app/admin') }}
{% endblock %}

{% block body %}

    <!-- navbar -->
    {% include('admin/partials/admin-navbar.html.twig') %}

    <div class="container-fluid">
        <div class="row">

            <!-- sidebar -->
            {% include('admin/partials/admin-sidebar.html.twig') %}

            <!-- main content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <h1 class="h2">{{ session.title }}</h1>
                </div>
                <div class="row table-responsive table-striped">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ session.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ session.title }}</td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ session.createdAt ? session.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>StartDateAt</th>
                            <td>{{ session.startDateAt ? session.startDateAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>EndDateAt</th>
                            <td>{{ session.endDateAt ? session.endDateAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ session.description }}</td>
                        </tr>
                        <tr>
                            <th>Is a contest</th>
                            <td>{% if session.isContest %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <a href="{{ path('session_edit', {'id': session.id}) }}" class="btn btn-warning mx-3">Modifier</a>
                    {{ include('session/_delete_form.html.twig') }}
                </div>
            </main>
        </div>
    </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('app/app') }}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.9.0/feather.min.js"></script>
        <!-- algoliaPlaces -->
        <script src="https://cdn.jsdelivr.net/npm/places.js@1.15.1"></script>
        {{ encore_entry_script_tags('app/algoliaPlaces') }}
        {{ encore_entry_script_tags('app/admin') }}
    {% endblock %}
{% endblock %}