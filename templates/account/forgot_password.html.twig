{% extends 'base.html.twig' %}

{% block title %}{{  parent() }} Mot de passe oublié{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('partials/navbar.html.twig') %}

    <div class="container mt-5">
        <div class="col-md-8 mx-auto mt-5">
            <div class="card">
                <div class="card-header"><h1>Mot de passe oublié</h1></div>
                <div class="card-body">

                    <form method="post">
                        <div class="form-group">
                            <label for="inputEmail" class="">Entrer l'adresse email de votre compte</label>
                            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                        </div>

                        <button class="btn btn-primary" type="submit">
                            Envoyer un mail
                        </button>

                    </form>

                    <div class="text-center">
                        <a class="d-block small mt-3" href="{{ path('account_login') }}">Se connecter</a>
                        <a class="d-block small mt-3" href="{{ path('account_register') }}">Créer un nouveau compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
