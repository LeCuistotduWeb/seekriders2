{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} {{ user.username }}{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('partials/navbar.html.twig') %}

    <div class="container mt-5">
        <div class="row mb-5">
            <div class="col-sm-2 col-xs-12">
               <div class="row">
                   {% if user.avatar %}
                       <img class="avatar mb-3 img-fluid mx-auto" src="{{ vich_uploader_asset(user, 'avatarFile') | imagine_filter('avatar') }}" alt="image/photo de {{ user.username }}">
                   {% else %}
                       <img class="avatar mb-3 img-fluid mx-auto" src="{{ asset('images/users/profile-image-null.png') | imagine_filter('avatar') }}" alt="image/photo de {{ user.username }}">
                   {% endif %}
                   {% if user is same as(app.user) %}
                       <div class="mt-3">
                           <a href="{{ path('account_profile') }}" class="btn btn-sm btn-primary mr-2 mb-2">Modifier mes informations</a>
                           <a href="{{ path('account_password') }}" class="btn btn-sm btn-danger mb-2">Modifier mon mot de passe</a>
                       </div>
                   {% endif %}
               </div>

            </div>

            <div class="col">
                <div class="container">
                    <h1 class="mb-2">{{user.username}}</h1>
                    {% if user.location %}
                        <p>{{ user.location.department }} / {{ user.location.city }}</p>
                    {% endif %}

                    <p><strong>Inscris depuis le : </strong>{{ user.createdAt | date('d M Y') }}</p>

                    <div class="mt-3">
                        <strong>Descirption : </strong> <br>
                        {% if user.biography == null %} aucune {% else  %}{{ user.biography }}{% endif %}
                    </div>

                    <hr>
                </div>


                <!-- last session -->
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h3>Dernière session participé : </h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p>Aucune session </p>
                        </div>
                    </div>
                </div>

                <!-- spots liked -->
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h3 class="my-4">Spots favoris :</h3>
                        </div>
                    </div>
                    <div class="row">
                        {% for spotLiked in user.spotLikes %}
                            {% set spot = spotLiked.getSpot %}
                            <div class="col-md-3 col-sm-4 mb-4">
                                <a href="{{ path('spot_show', {'id': spot.id }) }}">
                                    {% if spot.picture %}
                                        <img class="img-fluid" src="{{ vich_uploader_asset(spot.picture, 'imageFile') | imagine_filter('thumb') }}" alt="image/photo du spot {{ spot.title }}">
                                    {% else %}
                                        <img class="img-fluid" src="{{ asset('/images/spots/image-null.jpg') | imagine_filter('thumb') }}" alt="Card image cap">
                                    {% endif %}
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- spots created -->
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h3 class="my-4">Spots crée :</h3>
                        </div>
                    </div>
                    <div class="row">
                        {% for spot in user.spotsCreated %}
                            <div class="col-md-3 col-sm-4 mb-4">
                                <a href="{{ path('spot_show', {'id': spot.id }) }}">
                                    {% if spot.picture %}
                                        <img class="img-fluid" src="{{ vich_uploader_asset(spot.picture, 'imageFile') | imagine_filter('thumb') }}" alt="image/photo du spot {{ spot.title }}">
                                    {% else %}
                                        <img class="img-fluid" src="{{ asset('/images/spots/image-null.jpg') | imagine_filter('thumb') }}" alt="Card image cap">
                                    {% endif %}
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    {% include('partials/footer.html.twig') %}
{% endblock %}
