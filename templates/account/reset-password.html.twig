{% extends 'base.html.twig' %}

{% block title %}{{  parent() }} Réinitialisé votre mot de passe{% endblock %}

{% block body %}
    <!-- Navigation -->
    {% include('partials/navbar.html.twig') %}

    <div class="container">
        <div class="col-md-8 mx-auto mt-5">
            <div class="card">
                <div class="card-header"><h1>Réinitialisé votre mot de passe</h1></div>
                <div class="card-body">

                    <form method="post">

                        <div class="form-group">
                            <label for="inputPassword" class="">Votre nouveau mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Entrer votre mot de passe" required>
                        </div>
                        <input type="hidden" name="token" value="{token}">

                        <button class="btn btn-lg btn-primary" type="submit">
                            Réinitialisé
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
